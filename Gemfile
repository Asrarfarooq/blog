source "https://rubygems.org" # Specifies where to fetch gems from

# Jekyll itself
gem "jekyll", "~> 4.3.0"  # Using a recent version of Jekyll 4.x

# This is a good default theme to start with. We can change it later.
gem "minima", "~> 2.5"

# Optional but recommended for GitHub Pages for RSS feed, sitemap, etc.
gem "jekyll-feed", "~> 0.15"
gem "jekyll-seo-tag", "~> 2.7"
gem "jekyll-sitemap", "~> 1.4" # Generates a sitemap.xml file

# If you plan to rely on GitHub Pages to build your site without a custom GitHub Action,
# you might use the 'github-pages' gem, which locks versions to what GH Pages supports.
# For more control (recommended), we'll use a GitHub Action to build.
# gem "github-pages", group: :jekyll_plugins